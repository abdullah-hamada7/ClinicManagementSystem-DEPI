@model ClinicManagementSystem.DTOs.AppointmentDTO

@{
    ViewData["Title"] = "Appointment Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        Appointment Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Appointment ID</dt>
            <dd class="col-sm-10">@Model.AppointmentID</dd>

            <dt class="col-sm-2">Patient</dt>
            <dd class="col-sm-10">@Model.PatientID</dd>

            <dt class="col-sm-2">Doctor</dt>
            <dd class="col-sm-10">@Model.DoctorID</dd>

            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.AppointmentDate.ToString("MMMM dd, yyyy h:mm tt")</dd>

            <dt class="col-sm-2">Reason</dt>
            <dd class="col-sm-10">@Model.Reason</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.AppointmentID" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
