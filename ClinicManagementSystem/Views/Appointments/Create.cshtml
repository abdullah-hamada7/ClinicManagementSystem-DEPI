@model ClinicManagementSystem.DTOs.AppointmentDTO

<h2>Create New Appointment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientID"></label>
        <input asp-for="PatientID" class="form-control" />
        <span asp-validation-for="PatientID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorID"></label>
        <input asp-for="DoctorID" class="form-control" />
        <span asp-validation-for="DoctorID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AppointmentDate"></label>
        <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reason"></label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
