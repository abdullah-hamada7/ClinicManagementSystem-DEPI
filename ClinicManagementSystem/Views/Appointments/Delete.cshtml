@model ClinicManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this appointment?</h4>
<hr />

<div>
    <h5>Appointment Details</h5>
    <dl class="row">
        <dt class="col-sm-2">Appointment ID</dt>
        <dd class="col-sm-10">@Model.AppointmentID</dd>

        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Patient.FirstName</dd>

        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Model.Doctor.FirstName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.AppointmentDate.ToString("MMMM dd, yyyy h:mm tt")</dd>

        <dt class="col-sm-2">Reason</dt>
        <dd class="col-sm-10">@Model.Reason</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AppointmentID" />
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
