@model ClinicManagementSystem.DTOs.MedicalRecordDTO
@{
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";

}

<h2>Edit Medical Record</h2>

<form asp-action="Edit" asp-controller="MedicalRecords" method="post">
    <input type="hidden" asp-for="RecordID" />
    <div class="form-group">
        <label for="PatientID">Patient ID</label>
        <input type="text" asp-for="PatientID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DoctorID">Doctor ID</label>
        <input type="text" asp-for="DoctorID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="VisitDate">Visit Date</label>
        <input type="date" asp-for="VisitDate" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Diagnosis">Diagnosis</label>
        <textarea asp-for="Diagnosis" class="form-control"></textarea>
    </div>
    <!-- Add other fields like Height, Weight, etc. -->

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="@Url.Action("Index","MedicalRecords")" class="btn btn-secondary">Cancel</a>
</form>
